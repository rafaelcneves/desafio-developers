= simple_form_for @candidate, html: { class: "panel panel-default" } do |f|
  .panel-heading
    %h1= I18n.t("simple_form.titles.candidate.new")

  .panel-body
    .panel.panel-default
      .panel-heading
        = I18n.t("simple_form.titles.candidate.candidate_info")
      .panel-body
        .row
          .col-md-6.field
            = f.input :name
          .col-md-6.field
            = f.input :email
    .panel.panel-default
      .panel-heading
        = I18n.t("simple_form.titles.candidate.knowledges")
      .panel-body
        %blockquote
          = I18n.t("simple_form.titles.candidate.knowledges_hint")
        .row
          - [:html_score, :css_score, :javascript_score, :python_score, :django_score, :ios_score, :android_score].each do |field|
            .col-md-3.field
              = f.input field, as: :select, collection: 0..10, include_blank: false

  .panel-footer.actions
    = f.button :submit, class: "btn-lg btn-success"
