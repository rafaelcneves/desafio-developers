.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        = I18n.t("simple_form.titles.candidate.candidate_info")
      .panel-body
        .row
          .col-xs-6.field
            %p
              %b= I18n.t("simple_form.labels.candidate.name") + ":"
              = @candidate.name
          .col-xs-6.field
            %p
              %b= I18n.t("simple_form.labels.candidate.email") + ":"
              = @candidate.email
    .panel.panel-default
      .panel-heading
        = I18n.t("simple_form.titles.candidate.knowledges")
      .panel-body
        .row
          .col-xs-3.field
            %p
              %b= I18n.t("simple_form.labels.candidate.html_score") + ":"
              = @candidate.html_score
          .col-xs-3.field
            %p
              %b= I18n.t("simple_form.labels.candidate.css_score") + ":"
              = @candidate.css_score
          .col-xs-3.field
            %p
              %b= I18n.t("simple_form.labels.candidate.javascript_score") + ":"
              = @candidate.javascript_score
          .col-xs-3.field
            %p
              %b= I18n.t("simple_form.labels.candidate.python_score") + ":"
              = @candidate.python_score
          .col-xs-3.field
            %p
              %b= I18n.t("simple_form.labels.candidate.django_score") + ":"
              = @candidate.django_score
          .col-xs-3.field
            %p
              %b= I18n.t("simple_form.labels.candidate.ios_score") + ":"
              = @candidate.ios_score
          .col-xs-3.field
            %p
              %b= I18n.t("simple_form.labels.candidate.android_score") + ":"
              = @candidate.android_score
